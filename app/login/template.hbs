<div class="login" style="./image/login/bg.jpg">
        <div class="login-logo">
            <img src="./image/login/logo.png" alt="Cloud J">
        </div>
    <div class="overlay">
        {{#common/io-modal show="true"}}
            <div class="login-panel">
                <div class="login-header">
                    <div class="login-title text-center">
                        <img src="./image/login/title.png" alt="Cloud J X86 装机工具">
                    </div>
                </div>
                <div class="login-body">
                    <div class="login-body-banner">
                        <img src="./image/login/left.png" alt="Cloud J" class="login-left"/>
                        <img src="./image/login/banner.png" alt="make IT Easy" class="login-banner pull-right"/>
                    </div>
                    <div class="login-content">
                    	{{#common/io-form-validator submitForm="loginAction"}}
                        <form class="form-horizontal">
                            <div class="form-group clearfix">
                                {{input type="text" value=model.info.Username  required=true class="form-control" placeholder="您的用户名"}}
                            </div>
                            <div class="form-group clearfix">
                                {{input type="password" value=model.info.Password required=true class="form-control" placeholder="您的密码"}}
                            </div>
                            <div class="forget-helper">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <span>
                                            {{input type="checkbox" checked=model.isRememberPassword}}
                                            &nbsp;
                                            <small> 记住密码 </small>
                                        </span>
                                        <!--
                                        <i class="line"></i>
                                        <a> 找回密码 </a>
                                        -->
                                    </div>
                                    <div class="col-sm-6">
                                        <button type="submit" class="btn submit pull-right"> 登录 </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                        {{/common/io-form-validator}}
                    </div>
                </div>
            </div>
        {{/common/io-modal}}
        <p class="footer"> <small>&copy;2016 <a href="http://www.idcos.com/" target="_blank">CloudJ Inc</a>. All rights reserved. </small> </p>
    </div>
</div>