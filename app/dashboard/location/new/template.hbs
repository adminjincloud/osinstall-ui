<div class="panel panel-default">
    <div class="panel-heading">
        <ol class="breadcrumb" style="margin-bottom:0px;margin-top:0px;padding:0px 0px;">
        	<li>位置管理</li>
            <li class="active">编辑位置</li>
        </ol>
    </div>
    {{#common/io-form-validator submitForm="addAction"}}
	<form class="form-horizontal">
    <div class="panel-body">
        <table class="table table-bordered">
			<tbody>
				<tr>
					<td class="active" align="right" width="20%"><label class="required" for="Pid">父级位置</label></td>
					<td width="80%">
						<div class="col-md-5 form-group">
							{{view "select" required=true class="form-control" prompt="请选择" content=model.tree value=model.info.Pid optionValuePath="content.ID" optionLabelPath="content.ShowName" }}
							<span class="help-block with-errors"></span>
						</div>
					</td>
				</tr>

				<tr>
					<td class="active" align="right" width="20%"><label class="required" for="Name">位置名</label></td>
					<td width="80%">
						<div class="col-md-5 form-group">
							{{input required=true id="Name" value=model.info.Name type="text" class="form-control input-md"}}
							<span class="help-block with-errors"></span>
						</div>
					</td>
				</tr>
				
			</tbody>
		</table>
		<div class="text-center">
	        <button type="submit" class="btn btn-primary">提 交</button>
	        
	        {{#link-to "dashboard.location.list" model.info.Pid}}<button type="button" class="btn btn-default">取　消</button>{{/link-to}}
		</div>
    </div>
    </form>
	{{/common/io-form-validator}}
</div>