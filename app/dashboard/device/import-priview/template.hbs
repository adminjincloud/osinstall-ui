        <table class="table big">
            <thead>
                <tr>
                    <th width="8%">SN</th>
					<th width="12%">主机名</th>
					<th width="10%">应用IP</th>
					<th width="10%">掩码</th>
					<th width="10%">网关</th>
					<th width="10%">操作系统</th>
					<th width="12%">硬件配置模板</th>
					<th width="10%">系统模板</th>
					{{#if (eq "failure" status)}}
					<th width="14%">错误提示</th>
					{{/if}}
                </tr>
            </thead>
            <tbody>
            	{{#each rowList as |item index|}}
                <tr>
                	<td>{{item.Sn}}</td>
					<td>{{item.Hostname}}</td>
					<td>{{item.Ip}}</td>
					<td>{{item.Netmask}}</td>
					<td>{{item.Gateway}}</td>
					<td>{{item.OsName}}</td>
					<td>{{item.HardwareName}}</td>
					<td>{{item.SystemName}}</td>
					{{#if (eq "failure" status)}}
					<td class="text-danger">{{html-safe item.Content}}</td>
					{{/if}}
				</tr>
				{{/each}}
            </tbody>
        </table>
	
				<div class="row padding0">
					<div class="col-sm-6">
						{{#if (eq "success" status)}}
					    	<button type="button" {{action "importAction"}} class="btn btn-primary btn-sm">确认提交</button>
				       	{{/if}}

