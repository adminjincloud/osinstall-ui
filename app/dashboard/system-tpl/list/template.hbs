    <div class="panel-body">
        <table class="table big">
            <thead>
                <tr>
                	<th width="7%">ID</th>
                    <th width="20%">模板名称</th>
                    <th width="40%">内容</th>
                    <th width="35%">操作</th>
                </tr>
            </thead>
            <tbody>
            	{{#each rowList as |item index|}}
                <tr>
                	<td>{{#link-to "dashboard.systemTpl.detail" item.ID}}{{item.ID}}{{/link-to}}</td>
					<td>{{item.Name}}</td>
					<td>{{#link-to "dashboard.systemTpl.detail" item.ID}}查看{{/link-to}}</td>
