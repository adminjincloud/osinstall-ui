<div class="panel panel-default">
    <div class="panel-heading paddingtop0">
    	<!--
        <ol class="breadcrumb" style="margin-bottom:0px;margin-top:0px;padding:0px 0px;">
        	<li>模板管理</li>
            <li class="active">网段管理</li>
        </ol>
        -->
        <div class="breadcrumb paddingtop3">
	        <div style="float: left;">
	        	<h5>用户管理</h5>
	        </div>
	        <div style="float:right; position: relative; top: 7px; left: 16px;">
	        	{{#link-to "dashboard.user.new"}}<button type="button" class="btn btn-primary btn-xs">添加新用户</button>{{/link-to}}
	        </div>
        </div>
        
    </div>
    <div class="panel-body">
		<!--
			<div class="text-right paddingbottom10">{{#link-to "dashboard.network.new"}}<button type="button" class="btn btn-primary">添加网段</button>{{/link-to}}</div>
		-->
		
        <table class="table big">
            <thead>
                <tr>
                	<th>ID</th>
                    <th>用户名</th>
                    <th>姓名</th>
                    <th>手机号</th>
                    <th>角色</th>
                    <th>状态</th>
                    <th class="text-center">操作</th>
                </tr>
            </thead>
            <tbody>
            	{{#each rowList as |item index|}}
                <tr>
                	<td>{{#link-to "dashboard.user.detail" item.ID}}{{item.ID}}{{/link-to}}</td>
					<td>{{item.Username}}</td>
					<td>{{item.Name}}</td>
					<td>{{item.PhoneNumber}}</td>
                    <td>
                        {{#if (eq "Administrator" item.Role)}}
                            <span class="text-danger">超级管理员</span>
                        {{/if}}

                        {{#if (eq "User" item.Role)}}
                            普通用户
                        {{/if}}
                    </td>
					<td>
						{{#if (eq "Enable" item.Status)}}
							<span class="text-success">正常</span>
						{{/if}}

						{{#if (eq "Disable" item.Status)}}
							<span class="text-danger">锁定</span>
						{{/if}}
					</td>
					<td class="text-center">
					{{#link-to "dashboard.user.edit" item.ID}}<button type="button" class="btn btn-xs btn-default">修改</button>{{/link-to}}
					<button type="button" {{action "deleteAction" item.ID}} class="btn btn-xs btn-default">删除</button>
					</td>
				</tr>
				{{/each}}
            </tbody>
        </table>
        <div class="padding10">
            {{#common/io-pagination count=pageCount current=page change='pageChanged'}}{{/common/io-pagination}}
        </div>
    </div>
</div>