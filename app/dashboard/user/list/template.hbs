<div class="panel panel-default">
    <div class="paddingtop10 paddingright15 paddingbottom10" style="float:right;">
        {{#link-to "dashboard.user.new"}}<button type="button" class="btn btn-primary btn-xs">添加新用户</button>{{/link-to}}
    </div>
    
